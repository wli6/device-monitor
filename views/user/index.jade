extends ../layout






block content
	h1 Users
		table(class='table  table-condensed table-hover')
			tr
					td Login name
					td Check point
					td send message
					td logout

			for guard in guards
				- var name = guard.email;

				tr
					td= name
					td= guard.cp
					td
						button(id=name,class="btn btn-success") send message 
					td
						button(class="btn btn-danger") logout

